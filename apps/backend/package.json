{
    "name": "backend",
    "version": "1.0.0",
    "main": "src/index.ts",
    "engines": {
        "node": "20.x"
    },
    "scripts": {
        "dev": "nodemon -r tsconfig-paths/register src/index.ts",
        "build": "tsc",
        "start": "cross-env NODE_ENV=production node dist/index.js",
        "db:generate": "prisma generate",
        "db:push": "prisma db push",
        "db:migrate": "prisma migrate dev",
        "db:studio": "prisma studio",
        "db:seed": "ts-node -r tsconfig-paths/register src/scripts/seed-database.ts",
        "crawl-images": "ts-node -r tsconfig-paths/register src/scripts/crawl-and-seed-images.ts",
        "test": "jest --runInBand",
        "test:auth": "jest auth.test.ts --runInBand",
        "setup": "docker start postgres_local && npm run db:migrate",
        "db:stop": "docker stop bookscape-postgres && docker rm bookscape-postgres"
    },
    "author": "",
    "license": "ISC",
    "description": "",
    "dependencies": {
        "@prisma/client": "^5.19.1",
        "@types/jsonwebtoken": "^9.0.7",
        "@types/socket.io": "^3.0.1",
        "@types/stripe": "^8.0.416",
        "axios": "^1.10.0",
        "bcryptjs": "^2.4.3",
        "compression": "^1.8.0",
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.19.2",
        "express-rate-limit": "^7.5.1",
        "helmet": "^8.1.0",
        "ioredis": "^5.6.0",
        "js-cookie": "^3.0.5",
        "jsonwebtoken": "^9.0.2",
        "morgan": "^1.10.0",
        "multer": "^1.4.5-lts.1",
        "nodemailer": "^6.9.16",
        "prisma": "^5.19.1",
        "redis": "^4.7.0",
        "sharp": "^0.33.5",
        "socket.io": "^4.8.1",
        "stripe": "^18.3.0",
        "winston": "^3.17.0",
        "zod": "^3.24.2"
    },
    "devDependencies": {
        "@eslint/js": "^9.13.0",
        "@faker-js/faker": "^9.9.0",
        "@types/bcryptjs": "^2.4.6",
        "@types/compression": "^1.8.1",
        "@types/cookie-parser": "^1.4.8",
        "@types/cors": "^2.8.17",
        "@types/express": "^5.0.0",
        "@types/express-rate-limit": "^5.1.3",
        "@types/helmet": "^0.0.48",
        "@types/jest": "^29.5.14",
        "@types/js-cookie": "^3.0.6",
        "@types/morgan": "^1.9.9",
        "@types/multer": "^1.4.12",
        "@types/node": "^22.8.4",
        "@types/nodemailer": "^6.4.17",
        "@types/supertest": "^6.0.2",
        "@types/validator": "^13.12.2",
        "cross-env": "^7.0.3",
        "eslint": "^9.13.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.2.1",
        "eslint-plugin-react": "^7.37.2",
        "globals": "^15.11.0",
        "jest": "^29.7.0",
        "nodemon": "^3.1.7",
        "prettier": "^3.3.3",
        "rimraf": "^6.0.1",
        "supertest": "^7.0.0",
        "ts-jest": "^29.2.6",
        "ts-node": "^10.9.2",
        "tsc-alias": "^1.8.10",
        "tsconfig-paths": "^4.2.0",
        "tsx": "^4.19.2",
        "typescript": "^5.8.2",
        "typescript-eslint": "^8.12.2"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "moduleNameMapper": {
            "^@/(.*)$": "<rootDir>/src/$1"
        },
        "setupFilesAfterEnv": [
            "<rootDir>/src/tests/setup.ts"
        ]
    }
}
